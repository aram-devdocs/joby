{
  "extends": "../../packages/typescript-config/electron-main.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "paths": {
      "@packages/ui": ["../../packages/ui/src"],
      "@packages/ui/*": ["../../packages/ui/src/*"],
      "@packages/browser": ["../../packages/browser/src"],
      "@packages/browser/*": ["../../packages/browser/src/*"],
      "@packages/llm": ["../../packages/llm/src"],
      "@packages/llm/*": ["../../packages/llm/src/*"],
      "@packages/shared": ["../../packages/shared/src"],
      "@packages/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".webpack", "**/*.test.tsx"]
}
